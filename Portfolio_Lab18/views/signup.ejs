        <div class="text-center fs-2 fw-bold mb-4">
            Sign Up
        </div>
    <form action="/signup" method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="bi bi-person"></i></span>
