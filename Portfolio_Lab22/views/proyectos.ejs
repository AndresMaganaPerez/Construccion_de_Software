<%- include('includes/header.ejs') %>
<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-4">
    <% if (proyectos.length > 0) { %>
        <% for (let proyecto of proyectos) { %>
            <div class="col">
                <div class="card">
                    <img src="<%= proyecto.img %>" class="card-img-top" alt="Medvsa">
                    <div class="middle">
                        <div class="text">
                            <h5 class="card-title"><%= proyecto.nombre %></h5>
                            <p class="card-text"><%= proyecto.descripcion %></p>
                            <p class="card-date"><%= proyecto.fecha.toString().substr(0,15) %></p>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    <% } else { %>
        <h3>No hay proyectos existentes</h3>
    <% } %>
    </div>
    <a href="/proyectos/nuevoproyecto">Ingresar Nuevo Proyecto</a>
</div>

